<!-- ================== ADDED: EFFECTS & BEHAVIOR JS ================== -->
<script id="fg-behavior">
document.addEventListener('DOMContentLoaded', function() {
  /* ---------- Scroll reveal (IntersectionObserver) ---------- */
  const observerOptions = {
    root: null,
    rootMargin: '0px 0px -8% 0px',
    threshold: 0.12
  };
  const revealCb = (entries, obs) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('fg-show');
        entry.target.classList.add('fg-show-applied'); // marker
        entry.target.classList.add('fg-show'); // duplicate to ensure
        // add class for CSS used earlier
        entry.target.classList.add('fg-show'); // harmless
        // map to the css class we used: fg-fade -> fg-show
        entry.target.classList.add('fg-show');
      }
    });
  };

  // We'll add 'fg-fade' class to a set of common containers automatically,
  // so you don't need to edit every element.
  const autoSelect = [
    'section .bg-white.rounded-lg',
    'section .bg-gray-50.rounded-lg',
    '.content-box',
    '.max-w-7xl .grid > div',
    '.max-w-7xl .grid > .bg-white',
    '.max-w-7xl .grid > .bg-gradient-to-br',
    '.max-w-7xl img',
    'article',
    '.bg-white.p-6',
    '.bg-white.p-8'
  ];

  // add classes (fg-fade or fg-scale) to matched elements
  autoSelect.forEach(sel => {
    document.querySelectorAll(sel).forEach(el => {
      // don't repeatedly add
      if (!el.classList.contains('fg-fade')) {
        el.classList.add('fg-fade');
      }
      // cards with shadow get scale hover
      if (el.classList.contains('shadow-md') || el.classList.contains('shadow-sm')) {
        el.classList.add('fg-scale');
      }
    });
  });

  // Now observe all fg-fade elements
  const toReveal = document.querySelectorAll('.fg-fade');
  const io = new IntersectionObserver((entries, observer) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('fg-show');
        // Add small delay based on position to create stagger effect
        const index = Array.from(toReveal).indexOf(entry.target);
        entry.target.style.transitionDelay = (index % 6) * 0.06 + 's';
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  toReveal.forEach(el => io.observe(el));

  /* ---------- Scroll progress bar ---------- */
  const progress = document.getElementById('fg-progress');
  function updateProgress() {
    const docHeight = document.documentElement.scrollHeight - document.documentElement.clientHeight;
    const scrolled = window.scrollY;
    const pct = (scrolled / (docHeight || 1)) * 100;
    progress.style.width = pct + '%';
  }
  window.addEventListener('scroll', updateProgress, { passive: true });
  updateProgress();

  /* ---------- Scrollspy: highlight nav link based on section in view ---------- */
  const navLinks = document.querySelectorAll('nav a');
  const sections = Array.from(document.querySelectorAll('section[id]'));
  function onScrollSpy() {
    const y = window.scrollY;
    let current = sections[0] || null;
    for (const sec of sections) {
      const rect = sec.getBoundingClientRect();
      if (rect.top <= 80 && rect.bottom > 120) {
        current = sec;
        break;
      }
    }
    if (current) {
      navLinks.forEach(a => {
        const href = a.getAttribute('href') || '';
        if (href.includes('#' + current.id)) {
          a.classList.remove('text-gray-600');
          a.classList.add('text-primary','font-medium','border-b-2','border-primary','pb-1');
        } else {
          a.classList.remove('text-primary','font-medium','border-b-2','border-primary','pb-1');
          a.classList.add('text-gray-600');
        }
      });
    }
  }
  window.addEventListener('scroll', onScrollSpy, { passive: true });
  onScrollSpy();

  /* ---------- Smooth show for elements already in viewport on load ---------- */
  setTimeout(() => {
    document.querySelectorAll('.fg-fade').forEach(el => {
      const rect = el.getBoundingClientRect();
      if (rect.top < window.innerHeight * 0.9) {
        el.classList.add('fg-show');
      }
    });
  }, 120);

  /* ---------- Accessibility: keyboard nav focus handling ---------- */
  document.addEventListener('keyup', (e) => {
    if (e.key === 'Tab') {
      document.documentElement.classList.add('user-is-tabbing');
    }
  });
});
</script>
<!-- ================== END ADDED JS ================== -->

<!-- Keep your navigation script (unchanged) -->
<script id="navigation">
document.addEventListener('DOMContentLoaded', function() {
const navLinks = document.querySelectorAll('nav a');
const sections = document.querySelectorAll('section');
navLinks.forEach(link => {
link.addEventListener('click', function(e) {
e.preventDefault();
// Remove active class from all links
navLinks.forEach(l => {
l.classList.remove('text-primary', 'font-medium', 'border-b-2', 'border-primary', 'pb-1');
l.classList.add('text-gray-600');
});
// Add active class to clicked link
this.classList.remove('text-gray-600');
this.classList.add('text-primary', 'font-medium', 'border-b-2', 'border-primary', 'pb-1');
// Hide all sections
sections.forEach(section => {
section.classList.add('hidden');
});
// Show target section
const targetId = this.getAttribute('href').substring(1);
const targetSection = document.getElementById(targetId);
if (targetSection) {
targetSection.classList.remove('hidden');
}
});
});
});
</script>

</body>
</html>
